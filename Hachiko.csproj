<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.8" />
    <PackageReference Include="NetCord" Version="1.0.0-alpha.414" />
    <PackageReference Include="NetCord.Hosting" Version="1.0.0-alpha.414" />
    <PackageReference Include="NetCord.Hosting.AspNetCore" Version="1.0.0-alpha.414" />
    <PackageReference Include="NetCord.Hosting.Services" Version="1.0.0-alpha.414" />
    <PackageReference Include="NetCord.Services" Version="1.0.0-alpha.414" />
  </ItemGroup>

    <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="appsettings.*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
